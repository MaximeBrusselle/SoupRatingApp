<mvc:View
    controllerName="soupapp.controller.CreateSoup"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        id="page"
        showHeader="true"
        title="Create Soup"
    >
        <customHeader>
            <Bar id="bar">
                <contentLeft>
                    <Title
                        id="text"
                        text="Create Soup"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="save"
                        text="Save"
                        type="Emphasized"
                        press="handleSavePress"
                    />
                    <Button
                        id="cancel"
                        text="Cancel"
                        press="handleCancelPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox
                id="id11VBox"
                class="sapUiSmallMargin"
                fitContainer="true"
            >
                <f:SimpleForm
                    id="SimpleFormChange480_12120"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Basic Data"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title
                            id="idTitle"
                            text="General"
                        />
                        <Label
                            id="idLabel"
                            text="Name"
                        />
                        <Input
                            id="idInput"
                            value="{/create>name}"
                            required="true"
                        />
                        <Label
                            id="id2Label"
                            text="Short description"
                        />
                        <Input
                            id="id2Input"
                            value="{/create>shortDescr}"
                            required="true"
                        />
                        <Label
                            id="id4Label"
                            text="Long Description"
                        />
                        <TextArea
                            id="id4Input"
                            value="{/create>longDescr}"
                            required="true"
                        />
                        <Label
                            id="id3Label"
                            text="Date Served"
                        />
                        <Input
                            id="id3Input"
                            value="{/create>date}"
                            required="true"
                            type="Date"
                        />
                        <core:Title
                            id="idTitle2"
                            text="Characteristics"
                        />
                        <Label
                            id="id5Label"
                            text="Veggie"
                        />
                        <CheckBox
                            id="id5Input"
                            selected="{/create>isVeggie}"
                        />
                        <Label
                            id="id6Label"
                            text="Spicy"
                        />
                        <CheckBox
                            id="id6Input"
                            selected="{/create>isSpicy}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>

    </Page>
</mvc:View>
