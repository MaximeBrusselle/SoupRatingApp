<mvc:View
    controllerName="soupapp.controller.CreateSoup"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        id="idCreatePage"
        title="Create Soup"
    >
        <customHeader>
            <Bar id="idBar">
                <contentLeft>
                    <Title
                        id="idCreateSoupTitle"
                        text="Create Soup"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="idSaveButton"
                        text="Save"
                        type="Emphasized"
                        press="onSaveButtonPress"
                    />
                    <Button
                        id="idCancelButton"
                        text="Cancel"
                        press="onCancelButtonPress"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox
                id="id11VBox"
                class="sapUiSmallMargin"
                fitContainer="true"
            >
                <f:SimpleForm
                    id="idSimpleForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="Basic Data"
                    labelSpanXL="4"
                    labelSpanM="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    columnsXL="2"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title
                            id="idGeneralTitle"
                            text="General"
                        />
                        <Label
                            id="idNameLabel"
                            text="Name"
                        />
                        <Input
                            id="idNameInput"
                            value="{path: 'create>/name', type: 'sap.ui.model.type.String'}"
                            required="true"
                        />
                        <Label
                            id="idShortDescriptionLabel"
                            text="Short description"
                        />
                        <Input
                            id="idShortDescrInput"
                            value="{path: 'create>/shortDescr', type: 'sap.ui.model.type.String'}"
                            required="true"
                        />
                        <Label
                            id="idLongDescriptionLabel"
                            text="Long Description"
                        />
                        <TextArea
                            id="idLongDescrTextArea"
                            value="{path: 'create>/longDescr', type: 'sap.ui.model.type.String'}"
                            required="true"
                        />
                        <Label
                            id="idDateServed2Label"
                            text="Date Served"
                        />
                        <Input
                            id="idDateInput"
                            value="{path: 'create>/date', type: 'sap.ui.model.type.Date'}"
                            required="true"
                            type="Date"
                        />
                        <core:Title
                            id="idCharacteristicsTitle"
                            text="Characteristics"
                        />
                        <Label
                            id="idVeggie2Label"
                            text="Veggie"
                        />
                        <CheckBox
                            id="idCheckBox"
                            selected="{path: 'create>/isVeggie', type: 'sap.ui.model.type.Boolean'}"
                        />
                        <Label
                            id="idSpicy2Label"
                            text="Spicy"
                        />
                        <CheckBox
                            id="id2CheckBox"
                            selected="{path: 'create>/isSpicy', type: 'sap.ui.model.type.Boolean'}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
